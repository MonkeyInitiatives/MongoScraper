<div data-_id="{{id}}" class="card">
  <div class="card-header">
    <h3>
      <a class="article-link" target="_blank" rel="noopener noreferrer" href="{{link}}">{{title}}</a>
      <a class="btn btn-success {{#if saved}}delete{{else}}save{{/if}}">{{#if saved}}DELETE FROM SAVED{{else}}SAVE ARTICLE{{/if}}</a>
      {{#if saved}}<a class="btn btn-success notes">ARTICLE NOTES</a>{{/if}}
    </h3>
  </div>
  <div class="card-body">{{summary}}</div>
</div>